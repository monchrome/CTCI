// 9.1 A child is running up a staircase with n steps, and can hop either 1 step, 2 steps or 3 steps at a time.
// Implement a method to count how many possible ways the child can run up the stairs.
// Method 1 : using only dynamic programming
public static int[] CountPossibleways(int n, int x, int y, int z)
{
  if (n<-1)
  {
   return;
  }
  
  if ( x > n || y > n || z > n )
  {
      throw new Exception("Invalid Input. Steps climbed at a time cannot be greater total # of steps");
  }
  
  int[] arr = new int[n];
  arr[0] = 0;
  arr[1] = 1;
  
  for ( i = 2 ; i < n ; n++)
  {
    arr[i] = arr[i-1] + arr[i-2];
  }
   return arr[n-x]+arr[n-y]+arr[n-z];
}

public void main(string[] args)
{
 int TotalSteps = 10;
 int x = 1;
 int y = 2;
 int z = 3;
 
 CountPossibleways( TotalSteps,  x,  y,  z);
}

